rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 1. Bets Collection: Public Read, Admin Write ONLY
    match /bets/{betId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'admin@bettracker.com';
    }

    // 2. Chat Messages: Public Read, Authenticated/Guest Write with Validation
    match /messages/{messageId} {
      allow read: if true;
      allow write: if 
        // Must have valid content
        request.resource.data.text is string &&
        request.resource.data.text.size() > 0 &&
        request.resource.data.text.size() < 500 &&
        // Timestamp must be server time
        request.resource.data.createdAt == request.time &&
        // User field required for UI
        request.resource.data.user is string;
    }

    match /typing/{userId} {
      allow read, write: if true; // Low risk, transient data
    }

    match /{document=**} {
      allow read, write: if false; // Deny all other access by default
    }
  }
}
