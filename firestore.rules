rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /bets/{betId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /messages/{messageId} {
      allow read, write: if true;
    }
    match /typing/{userId} {
      allow read, write: if true;
    }
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
